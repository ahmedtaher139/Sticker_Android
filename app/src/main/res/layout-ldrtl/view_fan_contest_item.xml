<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/padding_fan_contest"
    android:layout_marginRight="@dimen/padding_fan_contest"
    android:layout_marginTop="@dimen/padding_fan_contest"
    tools:ignore="MissingPrefix">

    <RelativeLayout
        android:id="@+id/rlContestMain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rk_contest_height">

        <ImageView
            android:layoutDirection="rtl"
            android:id="@+id/imvBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/contest_ldrtl_hdpi"></ImageView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/dp_10"
            android:gravity="center"
            android:padding="5dp"
            app:contentPadding="8dp">

            <TextView
                android:textDirection="locale"
                android:textAlignment="viewStart"
                android:layout_marginStart="10dp"
                android:id="@+id/tv_content_description"
                style="@style/tvHome"
                fontPath="fonts/SanFranciscoText-Semibold_0.ttf"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:layout_marginEnd="5dp"
                android:layout_toLeftOf="@+id/imvBtnEditRemove"
                android:layout_toStartOf="@+id/imvBtnEditRemove"
                android:ellipsize="end"
                android:maxLines="1"
                android:maxHeight="90dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/txt_size_contest" />

            <ImageButton
                android:id="@+id/imbNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"
                android:rotation="270"
                android:tint="@color/colorCorporateText"
                android:visibility="gone"
                app:srcCompat="@drawable/spinner_dropdown" />

        </RelativeLayout>
    </RelativeLayout>


</RelativeLayout>