<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="@dimen/padding_fan_contest"
    android:layout_marginRight="@dimen/padding_fan_contest"
    android:layout_marginTop="@dimen/padding_fan_contest"

    android:layout_height="wrap_content"
    tools:ignore="MissingPrefix">

    <android.support.v7.widget.CardView
        android:elevation="1dp"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="0dp"
        app:contentPadding="8dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10">

            <TextView
                android:id="@+id/tv_content_description"
                style="@style/tvHome"
                fontPath="fonts/SanFranciscoText-Semibold_0.ttf"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="5dp"
                android:layout_toLeftOf="@+id/imvBtnEditRemove"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Header"
                android:textColor="@android:color/black"
                android:textSize="@dimen/txt_size_home_12sp" />

            <ImageButton
                android:rotation="270"
                android:id="@+id/imbNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"
                app:srcCompat="@drawable/spinner_dropdown"
                android:tint="@color/colorCorporateText" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>