<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:background="@drawable/btn_shadow_corner"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height_notification"
        android:layout_margin="5dp"
        android:elevation="1dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <ImageView
                    android:src="@drawable/ic_side_image"
                    android:id="@+id/imvNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:id="@+id/tvNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_toRightOf="@+id/imvNotification"
                    android:gravity="start"
                    android:text="Lorem Ipsum is simply dummy text of thter took a galley of typ" />
          <RelativeLayout
              android:layout_alignParentBottom="true"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
             <ImageView
                 android:src="@drawable/ic_trophy_notification"
                 android:layout_marginRight="10dp"
                 android:layout_toLeftOf="@+id/tvTimeNotification"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:id="@+id/tvTimeNotification"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:text="dfvlfvmkflv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
          </RelativeLayout>
            </RelativeLayout>
    </RelativeLayout>
</LinearLayout>