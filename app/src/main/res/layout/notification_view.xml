<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingPrefix"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:elevation="1dp"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_height_notification"
        android:layout_margin="5dp">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp">

                <ImageView
                    app:srcCompat="@drawable/ic_side_image_pink"
                    android:id="@+id/imvNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:textSize="@dimen/txt_size_home_12sp"
                    android:textColor="@android:color/black"
                    fontPath="fonts/SanFranciscoText-Regular_0.ttf"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/tvNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/imvNotification"
                    android:gravity="start"
                    android:text="Lorem Ipsum is simply dummy text of thter took a galley of type" />
          <RelativeLayout
              android:layout_alignParentBottom="true"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
             <ImageView
                 android:layout_centerInParent="true"
                 android:gravity="center"
                 android:id="@+id/imvtype"
                 app:srcCompat="@drawable/ic_trophy_notification"
                 android:layout_marginRight="10dp"
                 android:layout_toLeftOf="@+id/tvTimeNotification"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
                <TextView
                    android:layout_centerInParent="true"
                    android:textSize="@dimen/txt_size_home_12sp"
                    fontPath="fonts/SanFranciscoText-Regular_0.ttf"
                    android:gravity="center"
                    android:id="@+id/tvTimeNotification"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:text="4 hours ago"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
          </RelativeLayout>
            </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>