<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="MissingPrefix">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="0dp"
        app:contentPadding="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_gray">

                <ImageView
                    android:id="@+id/imvOfContest"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_height_add_product"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <ImageView
                    android:id="@+id/imvProductImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/ic_upload_imagee" />

                <ProgressBar
                    android:id="@+id/pgrImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
                <ImageView
                    android:id="@+id/imvSelected"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true" />
                <TextView
                    android:visibility="gone"
                    android:backgroundTint="#80FFFFFF"
                    android:backgroundTintMode="src_over"
                    android:textSize="15sp"
                    fontPath="fonts/SanFranciscoText-Regular_0.ttf"
                    android:id="@+id/tvFeatured"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/drawable_featured"
                    android:gravity="center"
                    android:paddingRight="@dimen/dp_5"
                    android:text="@string/txt_featured"
                    android:textColor="@android:color/white" />

            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="textStart"
                    android:drawablePadding="@dimen/padding_like_8dp"
                    android:drawableStart="@drawable/trophy_selector"
                    android:id="@+id/tv_total_count"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="5dp"
                    android:layout_centerInParent="true"
                    fontPath="fonts/SanFranciscoText-Semibold_0.ttf"
                    android:maxLines="1"
                    android:text="@string/total_count"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/txt_size_home_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:gravity="center"
                    android:layout_toEndOf="@+id/tv_total_count"
                    android:layout_toRightOf="@+id/tv_total_count"
                    android:id="@+id/tv_total_count_number"
                    android:layout_marginEnd="1dp"
                    android:layout_centerInParent="true"
                    fontPath="fonts/SanFranciscoText-Semibold_0.ttf"
                    android:maxLines="1"
                    android:text="1"
                    android:textColor="@color/colorCorporateText"
                    android:textSize="@dimen/txt_size_home_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textAlignment="textEnd"
                    android:layout_centerInParent="true"
                    fontPath="fonts/SanFranciscoText-Semibold_0.ttf"
                    android:maxLines="1"
                    android:text="@string/txt_won"
                    android:textColor="@color/colorHomeGreen"
                    android:textSize="@dimen/txt_size_home_12sp"
                    android:id="@+id/tv_contest_status"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>